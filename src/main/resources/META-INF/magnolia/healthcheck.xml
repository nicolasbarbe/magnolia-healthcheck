<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
  <name>healthcheck</name>
  <displayName>${project.name}</displayName>
  <description>${project.description}</description>
  <class>info.magnolia.monitoring.healthcheck.HealthcheckModule</class>
  <versionHandler>info.magnolia.monitoring.healthcheck.setup.HealthcheckModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.4/*</version>
    </dependency>
  <!-- Add other dependencies here, e.g the standard-templating-kit, or the multisite module with the enterprise edition. -->
  <!--
    <dependency>
      <name>standard-templating-kit</name>
      <version>2.7/*</version>
    </dependency>
    <dependency>
      <name>multisite</name>
      <version>1.0/*</version>
    </dependency>
  -->
  </dependencies>

  <servlets>
    <servlet>
      <name>HealthCheckServlet</name>
      <class>info.magnolia.monitoring.healthcheck.servlets.HealthCheckServlet</class>
      <comment>Used to check Magnolia instance health.</comment>
      <mappings>
        <mapping>/.healthcheck/*</mapping>
      </mappings>
    </servlet>
  </servlets>
</module>